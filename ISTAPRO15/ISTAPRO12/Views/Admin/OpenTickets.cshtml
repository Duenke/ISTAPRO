@model IEnumerable<ISTAPRO12.Models.Ticket>
@{
    ViewBag.Title = "Open Tickets";
    Layout = "_Layout";
}

<div>
    <div class="navbar-nav">
        <h1>Open Tickets</h1>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr><td>TicketNumber</td><td>SubmitDate</td><td>Summary</td><td>Details</td></tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TicketID</td>
                    <td>@t.SubmitDate</td>
                    <td>@t.Summary</td>
                    <td>
                        <a asp-action="ViewOpenTicket" asp-route-TicketID="@t.TicketID" class="btn btn-warning">View</a>
                        @*<a asp-action="DeleteTicket" asp-route-TicketID="@t.TicketID" class="btn btn-danger">Delete Ticket</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Logout" asp-controller="Account" class="btn btn-warning">Log Out</a>
    <a asp-action="NewTickets" class="btn btn-outline-primary">New Tickets</a>
    <a asp-action="OpenTickets" class="btn btn-outline-primary active">Open Tickets</a>
    <a asp-action="ClosedTickets" class="btn btn-outline-primary">Closed Tickets</a>
</div>